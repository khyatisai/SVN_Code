<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:card_view="http://schemas.android.com/tools"
              android:id="@+id/llParent"
              android:orientation="horizontal"
              android:background="@drawable/rounded_border_edittext"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:layout_marginTop="10dp"
              android:layout_height="wrap_content">

    <LinearLayout
            android:id="@+id/rlContainer"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/txtQuizName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                style="@style/Text14Blue"
                android:text="@string/header"
        />

        <TextView
                android:id="@+id/txtQuizDesc"
                android:layout_width="wrap_content"
                android:text="@string/sample"
                android:gravity="left"
                android:layout_marginRight="5dp"
                android:paddingTop="3dp"
                style="@style/Text11Grey"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/txtNumberOfAttempt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text10Oragne"
                    android:text="@string/_1"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text10Grey"
                    android:layout_marginLeft="5dp"
                    android:text="@string/attempts"
            />
            <TextView
                    android:background="@color/colorBlue"
                    android:layout_width="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_height="match_parent"/>
            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/txtNoResult"
                        style="@style/Text11Blue"
                        android:text="@string/NoResult"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/txtResultPass"
                        style="@style/Text11Blue"
                        android:drawableLeft="@drawable/ic_quiz_passed"
                        android:text="@string/Passed"
                        android:drawablePadding="5dp"
                        android:textColor="@color/colorGreen"
                        android:textSize="11sp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/txtResultFailed"
                        style="@style/Text11Blue"
                        android:drawableLeft="@drawable/ic_quiz_failed"
                        android:text="@string/Failed"
                        android:drawablePadding="5dp"
                        android:textColor="@color/colorRed"
                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView android:layout_width="1dp"
              android:background="@color/colorBlue"
              android:layout_height="match_parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent">

        <ImageView android:layout_width="wrap_content"
                   android:layout_marginTop="10dp"
                   android:src="@drawable/ic_quiz_take"
                   android:layout_gravity="center_horizontal"
                   android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/txtTakeQuiz"
                android:layout_width="wrap_content"
                android:text="@string/TakeQuiz"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                style="@style/Text12Orange"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>