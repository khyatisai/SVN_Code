<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/colorWhite"
              android:layout_height="match_parent">
    <ImageView
            android:id="@+id/imgSplash"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/splash_logo"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"

    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text12Orange"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/ChooseCountryOffice"
    />
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_border_edittext">
        <Spinner
                android:id="@+id/spnCoNameLst"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:paddingRight="10dp"
                android:layout_toLeftOf="@+id/imgDropdown1"
                android:background="@null"
                android:layout_height="40dp">
        </Spinner>
        <ImageView
                android:id="@+id/imgDropdown1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_dropdown_arrow"
        />
    </RelativeLayout>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text12Orange"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/choose_language"
    />
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_border_edittext">
        <Spinner
                android:id="@+id/spnCoLanguage"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:paddingRight="10dp"
                android:layout_toLeftOf="@+id/imgDropdown2"
                android:background="@null"
                android:layout_height="40dp">
        </Spinner>
        <ImageView
                android:id="@+id/imgDropdown2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_dropdown_arrow"
        />
    </RelativeLayout>

    <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="@string/Continue"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_border"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:textAppearance="?android:attr/textAppearanceButton"/>
</LinearLayout>