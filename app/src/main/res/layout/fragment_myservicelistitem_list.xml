<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.unfpa.appsistenciamaternaunfpa.fragments.MyServiceFragment"
        android:orientation="vertical"
        android:layout_margin="20dp"
        tools:context=".fragments.MyService.MyServiceFragment">
    <EditText
            android:id="@+id/edtSearchService"
            android:background="@drawable/rounded_border_edittext"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:hint="@string/search_services"
            android:drawableEnd="@drawable/ic_input_search"
            android:layout_height="40dp">
        <requestFocus/>
    </EditText>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerMyServiceList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/fragment_myservicelistitem_2"/>
</LinearLayout>
