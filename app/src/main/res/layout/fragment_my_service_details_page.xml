<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.MyService.MyServiceItemInfoFragment">
    <TextView
            android:id="@+id/txtNoDataAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text20Gray"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:text="@string/No_data_for_this_service"/>
    <androidx.core.widget.NestedScrollView
            android:id="@+id/scrlContainer"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="top"
                android:layout_margin="20dp">
            <TextView
                    android:id="@+id/txtItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/item_name"
                    style="@style/TextOrangeHeaderLarge"/>

            <TextView
                    android:id="@+id/txtItemDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/Text14Regular"
                    android:text="@string/my_service_item_desc"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nearby_centers"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    style="@style/TextOrangeHeaderMedium"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewCenterList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="4"
                    app:layoutManager="LinearLayoutManager"
                    tools:listitem="@layout/fragment_myservice_details_page_list_content"/>

            <TextView
                    android:id="@+id/txtFindMore"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/find_more"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlue"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textAppearance="?android:attr/textAppearance"
                    android:focusable="true"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>