<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center|start|left"
    android:orientation="horizontal"
    android:textAlignment="viewStart"
    android:weightSum="3">


    <ImageView
        android:id="@+id/circleAppointment"
        android:layout_width="51dp"
        android:layout_height="match_parent"
        android:textAlignment="textStart"
        app:srcCompat="@drawable/ellipse7"
        />

    <TextView
        android:id="@+id/txtHora"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="08:00 A. M. "
        android:textAlignment="viewStart"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat,SmallSp" />

    <TextView
        android:id="@+id/txtNombrePaciente"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:text="Catalinda Torrez Torrez Torrez Torrez Torrez Torrez"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat,SmallSp" />


</LinearLayout>
