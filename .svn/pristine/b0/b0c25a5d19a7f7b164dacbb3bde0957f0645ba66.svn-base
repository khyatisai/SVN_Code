<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke
                            android:width="1dp"
                            android:color="#777" />
                    <gradient
                            android:startColor="@color/colorBlue"
                            android:centerColor="@color/colorBlue"
                            android:endColor="@color/colorBlue"
                            android:angle="270" />
                    <size
                            android:width="20dp"
                            android:height="20dp" />
                </shape>
            </item>
<!--small line-->
            <item
                    android:width="6dp"
                    android:height="2dp"
                    android:top="13dp"
                    android:left="3dp">
                <rotate
                        android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#fff"/>
                    </shape>
                </rotate>
            </item>
<!--big line-->
            <item
                    android:width="12dp"
                    android:height="2dp"
                    android:top="10dp"
                    android:left="6dp">
                <rotate
                        android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="#fff"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</selector>