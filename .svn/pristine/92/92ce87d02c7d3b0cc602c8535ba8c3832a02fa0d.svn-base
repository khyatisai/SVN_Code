<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <!-- Card layout -->
    <androidx.cardview.widget.CardView
            android:id="@+id/cardContainer"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/colorLightOrange"
            app:cardCornerRadius="7dp"
            android:visibility="visible"
            android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/imgMedicine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_myhealth_med_red"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"/>
            <TextView
                    android:id="@+id/medicineName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_16SP"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imgMedicine"
                    fontPath="fonts/Roboto-Bold.ttf"
                    android:text="@string/menu_my_knowledge"
            />
            <TextView
                    android:id="@+id/txtDoesage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    style="@style/TextWhite12sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/medicineName"
                    android:text="@string/menu_my_knowledge"
            />
            <TextView
                    android:id="@+id/txtFoodDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    style="@style/TextWhite12sp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/txtDoesage"
                    android:text="@string/menu_my_knowledge"
            />
            <ImageView
                    android:id="@+id/imgDelete"
                    android:src="@drawable/ic_myhealth_del_med"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- End layout -->
    <androidx.cardview.widget.CardView
            android:id="@+id/addContainer"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="7dp"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_add"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
        />
    </androidx.cardview.widget.CardView>
</LinearLayout>
