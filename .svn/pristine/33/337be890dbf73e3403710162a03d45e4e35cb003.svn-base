<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:visibility="visible"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="match_parent">

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
            >
                <TextView
                        android:id="@+id/txtAppointmentName"
                        style="@style/Text14Blue"
                        android:text="@string/test_name"
                        android:layout_width="match_parent"
                        android:layout_toLeftOf="@+id/imgDelete"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentStart="true"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:id="@+id/imgDelete"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_del"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                    android:id="@+id/txtDateTime"
                    style="@style/Text12Grey"
                    android:drawableLeft="@drawable/ic_li_date"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:text="@string/datetime"
                    android:drawablePadding="5dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/txtCenterName"
                    style="@style/Text12Grey"
                    android:drawableLeft="@drawable/ic_li_address"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:text="@string/centername"
                    android:drawablePadding="5dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/cardAddAppointment"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:layout_height="wrap_content">
        <LinearLayout
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/addAppointment"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_add"/>


            <TextView
                    style="@style/Text12Blue"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:text="@string/AddAppointments"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>